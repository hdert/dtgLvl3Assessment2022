mixin head(title, description, image, large, page, imageAlt)
  head
    title= title
    meta(name="description", content=description)
    meta(name="robots", content="noindex, nofollow")
    meta(name="charset", content="UTF-8")
    // Social media meta tags
    // Tells the crawler what the page url is
    meta(
      property="og:url",
      content="https://exhibition.hdert.com/" + page + ".html"
    )
    // Tells the crawler the long form title of the page
    meta(property="og:title", content=title)
    // Tells the crawler the long form description of the page
    meta(property="og:description", content=description)
    // Gives the crawler an image that represents the page
    meta(property="og:image", content=image)
    // Tells the crawler what type of page this page is
    meta(property="og:type", content="website")
    // Tells the crawler how big to display the image
    meta(
      name="twitter:card",
      content=large === true ? "summary_large_image" : "summary"
    )
    // Tells the crawler alt text for the image
    meta(name="twitter:image:alt", content=imageAlt)
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="../scss/styles.scss")
